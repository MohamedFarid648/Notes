22. Add jsPlumb to Angular 6

 https://github.com/jsplumb/jsplumb/
 https://github.com/jsplumb/katavorio
 for Events :
https://jsplumbtoolkit.com/community/doc/events.html
http://www.freedevelopertutorials.com/jsplumb-tutorial/endpoints/

npm install jquery jquey-ui jsplumb

and in angular.json :
 "node_modules/jquery/dist/jquery.min.js",
 "node_modules/jquery-ui-dist/jquery-ui.min.js",
 "node_modules/jsplumb/dist/js/jsplumb.min.js",
 
Ex1:
https://stackoverflow.com/questions/43934727/how-to-use-jquery-plugin-with-angular-4
Ex2:
import { Component, OnInit, OnChanges } from '@angular/core';
declare var jsPlumb: any;
declare var $: any;

@Component({
  selector: 'app-drag-anddrop',
  templateUrl: './drag-anddrop.component.html',
  styleUrls: ['./drag-anddrop.component.scss']
})
export class DragAnddropComponent implements OnInit, OnChanges {


  constructor() { }

  ngOnInit() {
  //using JQuery
    $('.draggable').draggable();
    $('#diagramContainer').css('position', 'relative');
    
/*using JSPlump*/
//events
   jsPlumb.bind('dblclick', function(conn) {
      console.log('connection when dbclick is ');
      console.log(conn);
      jsPlumb.deleteConnection(conn);

  });
  
    jsPlumb.bind('connection', function (info) { console.log('Info about connection :'); console.log(info); });

//End Points
const _common = {
            isSource: true,
            isTarget: true,
            connector: 'Straight',
            endpoint: ['Rectangle', { radius: 30 }],
            maxConnections: -1, // -1 means that the Endpoint has no maximum limit of Connections:
            paintStyle: { fill: 'white', outlineStroke: 'blue', strokeWidth: 3 },
            hoverPaintStyle: { outlineStroke: 'lightblue' },
            connectorStyle: { outlineStroke: 'green', strokeWidth: 1 },
            connectorHoverStyle: { strokeWidth: 2 },
            cssClass: 'jtk-endpoint',
            ConnectionsDetachable: true

          };
          
jsPlumb.draggable('myDiv');
  const bottomEndPoint = jsPlumb.addEndpoint('myDiv', {
            anchor: 'Bottom'
          }, _common);

          bottomEndPoint.bind('dblclick', function (endpoint) {
            console.log('endPoint is :'); console.log(endpoint);
            console.log('connections :'); console.log(endpoint.connections);
            console.log(endpoint.elementId);

          });
          
  const topEndPoint = jsPlumb.addEndpoint('myDiv', {
              anchor: 'Top'
            }, _common);
            topEndPoint.bind('dblclick', function (endpoint) {
              console.log('endPoint is :'); console.log(endpoint);
              console.log('connections :'); console.log(endpoint.connections);
            });
  
  }

  ngOnChanges() {
  }

}


